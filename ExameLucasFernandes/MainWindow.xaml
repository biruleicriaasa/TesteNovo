        <Button x:Name="btListarMatricula" Content="LISTAR MATRICULA" HorizontalAlignment="Left" Margin="459,295,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btListarMatricula_Click"/>
        <Button x:Name="btCadastrarAluno" Content="CADASTRA ALUNO" HorizontalAlignment="Left" Margin="193,98,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btCadastrarAluno_Click"/>
