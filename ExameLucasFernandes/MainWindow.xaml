        <Button x:Name="btCadastarDisciplina" Content="CADASTRAR DISCIPLINA" HorizontalAlignment="Left" Margin="193,231,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btCadastarDisciplina_Click"/>
        <Button x:Name="btCadastrarMatricula" Content="CADASTRAR MATRICULAR" HorizontalAlignment="Left" Margin="193,295,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btCadastrarMatricula_Click"/>
        <Label Content="MENU DE OPÇÕES" HorizontalAlignment="Left" Margin="369,45,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
