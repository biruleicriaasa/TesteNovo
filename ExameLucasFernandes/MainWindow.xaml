<Window x:Class="ExameLucasFernandes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExameLucasFernandes"
        mc:Ignorable="d"
        Title="MENU PRINCIPAL" Height="450" Width="800">
    <Grid>
        <Button x:Name="btListarAluno" Content="LISTAR ALUNO" HorizontalAlignment="Left" Margin="459,98,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btListarAluno_Click"/>
        <Button x:Name="btListarCurso" Content="LISTAR CURSO" HorizontalAlignment="Left" Margin="459,169,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="btListarCurso_Click"/>
